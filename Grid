#include <bits/stdc++.h>
using namespace std;
#define ll long long 
 
int main()
{
    ios::sync_with_stdio(0);cin.tie(0);cout.tie(0);
    ll n;
    cin>>n;
    ll mod = 1000000000 + 7;
    ll a[n+1][n+1];
    for(ll i=1;i<=n;i++)
    {
        for(int j=1;j<=n;j++){
            char x;
            cin>>x;
            if(x=='*')
            {
                a[i][j] = 0;
            }
            else
            {
                a[i][j] = -1;
            }
        }
    }
    if(a[1][1] == 0) {cout<<0;}
    else
    {
    a[1][1] = 1;
    for(ll i=2;i<=n;i++)
    {
        if(a[1][i]==-1){a[1][i] = a[1][i-1];}
        if(a[i][1]==-1){a[i][1] = a[i-1][1];}
    }
    for(ll i=2; i<=n ;i++)
    {
        for(ll j=2; j<=n ;j++)
        {
            if(a[i][j]==-1)
            {
            a[i][j] = (a[i-1][j] + a[i][j-1])%mod;
            }
            
        }
    }
    // cout<<a[1][10]<<endl;
    // cout<<a[10][1]<<endl;
    cout<<a[n][n];

    }
    return 0;
}
